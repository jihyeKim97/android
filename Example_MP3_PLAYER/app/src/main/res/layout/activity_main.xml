<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ListView
        android:id="@+id/listViewMP3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btnTxtSeek" />

    <LinearLayout
        android:id="@+id/btnTxtSeek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#AAB6C0"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="#C7C7C7" />

            <TextView
                android:textColorHint="#FFFFFF"
                android:id="@+id/textViewPlayingState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/seekBar"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:hint=" 00:00 "
                android:textColor="#ffffff"
                android:textSize="10dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/textViewPlayingMusicName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/textViewPlayingState"
            android:layout_marginBottom="10dp"
            android:text="Running music  :  "
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/textViewPlayingMusicName"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageButton
                android:background="#AAB6C0"
                android:id="@+id/btPlay"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:src="@mipmap/play"/>

            <ImageButton
                android:background="#AAB6C0"
                android:src="@mipmap/stop"
                android:scaleType="fitCenter"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/btPause"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <ImageButton
                android:background="#AAB6C0"
                android:id="@+id/btMyList"
                android:src="@mipmap/wish"
                android:scaleType="fitCenter"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:textSize="20sp" />

        </LinearLayout>



    </LinearLayout>

</RelativeLayout>