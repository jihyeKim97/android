<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dial"
        android:id="@+id/btnDial"/>
    <Button
        android:layout_below="@id/btnDial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open"
        android:id="@+id/btnopen"/>
    <Button
        android:layout_below="@id/btnopen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Google Map"
        android:id="@+id/btnGoogleMap"/>
    <Button
        android:layout_below="@id/btnGoogleMap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Google Map Search"
        android:id="@+id/btnGoogleSearch"/>
    <Button
        android:layout_marginTop="450dp"
        android:layout_below="@id/btnGoogleSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="picture"
        android:id="@+id/btnPic"/>
    <Button
        android:layout_marginTop="405dp"
        android:layout_below="@id/btnGoogleSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SMS"
        android:id="@+id/btnSms"/>
    <Button
        android:layout_marginTop="405dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EXIT"
        android:id="@+id/btnExit"/>

</RelativeLayout>